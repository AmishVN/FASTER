<Window x:Class="MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"

    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    Background="{DynamicResource MaterialDesignPaper}"
    FontFamily="{DynamicResource MaterialDesignFont}"

    mc:Ignorable="d"
    TextElement.FontWeight="Regular"
    TextElement.FontSize="11"
    TextOptions.TextFormattingMode="Ideal"
    TextOptions.TextRenderingMode="Auto"

    Title="FAST"
    Icon="FAST-main-icon.ico"
    
    Height="430"
    Width="800"
    MinWidth="800"
    MinHeight="430"

    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
>

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0"/>
    </WindowChrome.WindowChrome>

    <Grid Name="IMainGrid">
        <!--Grid Definitions-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Name="IMenuColumn" Width="1*" MinWidth="150" MaxWidth="200"/>
            <ColumnDefinition Name="IContentColumn" Width="4*" MinWidth="540"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="108"/>
            <RowDefinition Height="*"  Name="IServerProfilesRow"/>
            <RowDefinition Height="141"/>
        </Grid.RowDefinitions>

        <!--Custom Window Bar Elements-->
        <Rectangle Name="IWindowDragBar" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,0,80,3" Fill="{DynamicResource MaterialDesignPaper}"/>
        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal">
            <Image Name="ILogoImage" HorizontalAlignment="Left" Margin="5,0" Height="20" Width="20" Source="FAST-main-icon.ico"/>
            <Label Name="IWindowTitle" Content="Flax's Arma Server Tool" VerticalAlignment="Center"/>
        </StackPanel>
        <ListBox Grid.Row="0" Grid.Column="1" HorizontalAlignment="Right" SelectionMode="Extended" Style="{StaticResource MaterialDesignToolToggleFlatListBox}" Margin="0,0,-1,0" Width="84">
            <ListBoxItem Name="IWindowMinimizeButton" Background="{DynamicResource MaterialDesignPaper}">
                <materialDesign:PackIcon Kind="WindowMinimize" Width="15" Height="16"/>
            </ListBoxItem>
            <ListBoxItem Name="IWindowCloseButton" Background="{DynamicResource MaterialDesignPaper}">
                <materialDesign:PackIcon Kind="WindowClose" Width="15" Height="16"/>
            </ListBoxItem>
        </ListBox>

        <!--Menu Column - Main Items-->
        <StackPanel Grid.Column="0" Grid.Row="1" TextElement.FontSize="13">
            <Label  Content="Main" Margin="10,10,0,0" FontWeight="Bold" FontStyle="Italic"/>
            <ListBox Name="IMainMenuItems" HorizontalAlignment="Stretch" Margin="0,0,0,10">
                <ListBoxItem Name="ISteamUpdaterTabSelect" Content="Steam Updater"/>
                <ListBoxItem Name="ISteamModsTabSelect" Content="Steam Mods"/>
            </ListBox>
        </StackPanel>

        <!--Menu Column - Server Profiles-->
        <StackPanel Grid.Column="0" Grid.Row="2" TextElement.FontSize="13">
            <Rectangle Fill="Black" Height="2"></Rectangle>
            <StackPanel Orientation="Horizontal">
                <Label Name="IServerProfilesLabel" Content="Server Profiles" Margin="10,10,0,0" FontWeight="Bold" FontStyle="Italic"/>
                <Button Name="INewServerProfileButton" Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}" Height="15" Width="15" Margin="20,0,0,-10">
                    <materialDesign:PackIcon Kind="Plus" Height="10" Width="10" />
                </Button>
            </StackPanel>

            <ListBox Name="IServerProfilesList" HorizontalAlignment="Stretch" Margin="0,0,0,10">
            </ListBox>
        </StackPanel>

        <!--Menu Column - Other Items-->
        <StackPanel Grid.Column="0" Grid.Row="3" TextElement.FontSize="13">
            <Rectangle Fill="Black" Height="2"></Rectangle>
            <Label Content="Other" Margin="10,10,0,0" FontWeight="Bold" FontStyle="Italic" />
            <ListBox Name="IOtherMenuItems" HorizontalAlignment="Stretch" Margin="0,0,0,10">
                <ListBoxItem Name="ISettingsTabSelect" Content="Settings"/>
                <ListBoxItem Name="IToolsTabSelect" Content="Tools"/>
                <ListBoxItem Name="IAboutTabSelect" Content="About"/>
            </ListBox>
        </StackPanel>

        <!--Content Column - Main Content-->
        <TabControl Grid.Row="1" Grid.RowSpan="3" Name="IMainContent" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,-5,-2,-2" Background="White" BorderBrush="{x:Null}" Foreground="{x:Null}" Grid.Column="1">
            <!--Removes Visible Tab Controls-->
            <TabControl.ItemContainerStyle>
                <Style TargetType="{x:Type TabItem}">
                    <Setter Property="Visibility" Value="Collapsed"/>
                </Style>
            </TabControl.ItemContainerStyle>

            <!--Main Content - Steam Updater Tab-->
            <TabItem Name="ISteamUpdaterTab" Header="TabItem">
                <Grid VerticalAlignment="Stretch" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5*"/>
                        <ColumnDefinition Width="8*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="52"/>
                    </Grid.RowDefinitions>

                    <StackPanel Name="ISteamGroup" Grid.Column="0">
                        <GroupBox Header="SteamCMD Settings" FontWeight="Bold" Style="{DynamicResource MaterialDesignGroupBox}" Margin="10,10,10,0" materialDesign:ShadowAssist.ShadowDepth="Depth2" BorderThickness="0">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBox Name="ISteamDirBox"  materialDesign:HintAssist.Hint="Directory" Style="{StaticResource MaterialDesignFloatingHintTextBox}" BorderBrush="{DynamicResource PrimaryHueDarkBrush}" Margin="0,0,0,5"/>
                                    <Button Name="ISteamDirButton" Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}" Height="20" Width="20" Margin="10,0,0,0">
                                        <materialDesign:PackIcon Kind="FolderOpen" Height="10" Width="10"/>
                                    </Button>
                                </StackPanel>

                                <TextBox Name="ISteamUserBox" materialDesign:HintAssist.Hint="User Name" Style="{StaticResource MaterialDesignFloatingHintTextBox}" BorderBrush="{DynamicResource PrimaryHueDarkBrush}" Margin="0,0,0,5"/>
                                <PasswordBox Name="ISteamPassBox" materialDesign:HintAssist.Hint="Password" Style="{StaticResource MaterialDesignFloatingHintPasswordBox}" BorderBrush="{DynamicResource PrimaryHueDarkBrush}" Margin="0,0,0,5"/>
                            </StackPanel>
                        </GroupBox>
                        <GroupBox Header="Arma Server Settings" FontWeight="Bold" Style="{DynamicResource MaterialDesignGroupBox}" Margin="10,10,10,0" materialDesign:ShadowAssist.ShadowDepth="Depth2" BorderThickness="0">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBox Name="IServerDirBox" materialDesign:HintAssist.Hint="Directory" Style="{StaticResource MaterialDesignFloatingHintTextBox}" BorderBrush="{DynamicResource PrimaryHueDarkBrush}" Margin="0,0,0,5"/>
                                    <Button Name="IServerDirButton" Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}" ToolTip="MaterialDesignFloatingActionMiniAccentButton" Height="20" Width="20" Margin="10,0,0,0">
                                        <materialDesign:PackIcon Kind="FolderOpen" Height="10" Width="10"/>
                                    </Button>
                                </StackPanel>

                                <ComboBox materialDesign:HintAssist.Hint="Version" Style="{StaticResource MaterialDesignFloatingHintComboBox}" BorderBrush="{DynamicResource PrimaryHueDarkBrush}">
                                    <ComboBoxItem>Stable</ComboBoxItem>
                                    <ComboBoxItem>Development</ComboBoxItem>
                                </ComboBox>
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>

                    <Button Name="ISteamUpdateButton" Style="{StaticResource MaterialDesignRaisedAccentButton}" Grid.Column="0" Grid.Row="1" Content="Update" Margin="10,10,10,10"/>
                    <RichTextBox Name="ISteamOutputBox" Grid.Column="1" Grid.Row="0" Grid.ColumnSpan="2" IsReadOnly="True" Background="LightGray" Margin="10,10,10,0" VerticalScrollBarVisibility="Auto"/>
                    <ProgressBar Name="ISteamProgressBar" Grid.Column="1" Grid.Row="1" Margin="10,10,10,10" Height="32"/>
                    <Button Name="ISteamCancelButton" Style="{StaticResource MaterialDesignRaisedAccentButton}" Grid.Column="2" Grid.Row="1" Content="Cancel" Margin="0,10,10,10" IsEnabled="False"/>
                </Grid>
            </TabItem>

            <!--Main Content - Server Mods Tab-->
            <TabItem Name="ISteamModsTab" Header="TabItem">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <ListBox Name="IActionButtons" SelectionMode="Extended" Style="{StaticResource MaterialDesignToolToggleListBox}" HorizontalAlignment="Left" Margin="10,10,0,0">
                        <ListBoxItem>
                            <ListBoxItem.ToolTip>
                                <TextBlock>Add Mod from Steam URL</TextBlock>
                            </ListBoxItem.ToolTip>
                            <materialDesign:PackIcon Kind="Plus"/>
                        </ListBoxItem>
                        <ListBoxItem>
                            <ListBoxItem.ToolTip>
                                <TextBlock>Import from Arma 3 Launcher File</TextBlock>
                            </ListBoxItem.ToolTip>
                            <materialDesign:PackIcon Kind="FileDocument"/>
                        </ListBoxItem>
                        <ListBoxItem>
                            <ListBoxItem.ToolTip>
                                <TextBlock>Add Private Steam Mod by ID</TextBlock>
                            </ListBoxItem.ToolTip>
                            <materialDesign:PackIcon Kind="Lock"/>
                        </ListBoxItem>
                        <ListBoxItem>
                            <ListBoxItem.ToolTip>
                                <TextBlock>Check For Updates</TextBlock>
                            </ListBoxItem.ToolTip>
                            <materialDesign:PackIcon Kind="Clock"/>
                        </ListBoxItem>
                        <ListBoxItem>
                            <ListBoxItem.ToolTip>
                                <TextBlock>Update All</TextBlock>
                            </ListBoxItem.ToolTip>
                            <materialDesign:PackIcon Kind="Update"/>
                        </ListBoxItem>
                    </ListBox>
                    <ProgressBar Grid.Row="0" Grid.Column="1" Height="Auto" Width="Auto" Margin="10,10,10,0"></ProgressBar>
                    <DataGrid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="10">

                    </DataGrid>
                </Grid>
            </TabItem>

            <!--Main Content - Settings Tab-->
            <TabItem Name="ISettingsTab" Header="TabItem">
                <Grid>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock VerticalAlignment="Center">Light</TextBlock>
                        <ToggleButton Name="IBaseThemeToggle" Style="{StaticResource MaterialDesignSwitchToggleButton}" IsChecked="True"/>
                        <TextBlock VerticalAlignment="Center">Dark</TextBlock>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!--Main Content - Tools Tab-->
            <TabItem Name="IToolsTab" Header="TabItem">

            </TabItem>

            <!--Main Content - About Tab-->
            <TabItem Name="IAboutTab" Header="TabItem">

            </TabItem>
        </TabControl>
    </Grid>
</Window>