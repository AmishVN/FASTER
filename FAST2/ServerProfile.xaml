<UserControl x:Class="ServerProfile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:dragablz="clr-namespace:Dragablz;assembly=Dragablz"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"

             FontFamily="{DynamicResource MaterialDesignFont}"
             

             TextElement.FontWeight="Regular"
             TextElement.FontSize="11"
             TextOptions.TextFormattingMode="Ideal"
             TextOptions.TextRenderingMode="Auto"

             mc:Ignorable="d"
             d:DesignHeight="570.4"
             d:DesignWidth="796.8">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="55" />
        </Grid.RowDefinitions>
        <dragablz:TabablzControl Margin="-2,-2,-5,48" Grid.Row="0" Grid.RowSpan="2" BorderThickness="0" FixedHeaderCount="6" Background="{x:Null}">
            <dragablz:TabablzControl.InterTabController>
                <dragablz:InterTabController />
            </dragablz:TabablzControl.InterTabController>
            <TabItem Header="Settings">
                <Grid Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="2*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                    </Grid.RowDefinitions>

                    <materialDesign:Card Grid.ColumnSpan="2" Grid.RowSpan="2" Margin="5" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                        <Grid>
                            <StackPanel>
                                <Label Margin="2" Content="Main"/>
                                <Separator Style="{StaticResource MaterialDesignSeparator}" Margin="-8"/>
                            </StackPanel>
                        </Grid>
                    </materialDesign:Card>

                    <materialDesign:Card Grid.Row="2" Grid.RowSpan="2" Grid.Column="0" Margin="5" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                        <Grid>
                            <StackPanel>
                                <Label Margin="2" Content="Headless Client"/>
                                <CheckBox  Margin="2,-25,2,0" Content="Enable" HorizontalAlignment="Right" FlowDirection="RightToLeft"/>
                                <Separator Style="{StaticResource MaterialDesignSeparator}" Margin="-8"/>
                            </StackPanel>
                        </Grid>
                    </materialDesign:Card>

                    <materialDesign:Card Grid.Row="2" Grid.Column="1" Margin="5" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <StackPanel>
                                <Label Margin="2" Content="Network"/>
                                <Separator Style="{StaticResource MaterialDesignSeparator}" Margin="-8"/>
                            </StackPanel>

                            <CheckBox Grid.Row="1" Style="{StaticResource MaterialDesignCheckBox}" Content="Loopback" Margin="5"/>
                            <CheckBox Grid.Row="2" Style="{StaticResource MaterialDesignCheckBox}" Content="UPNP" Margin="5"/>
                            <CheckBox Grid.Row="3" Style="{StaticResource MaterialDesignCheckBox}" Content="Netlog" Margin="5"/>
                        </Grid>
                    </materialDesign:Card>

                    <materialDesign:Card Grid.Row="0" Grid.Column="2" Grid.RowSpan="2" Margin="5" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                        <DockPanel>
                            <Grid DockPanel.Dock="Top">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>  
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <StackPanel Grid.ColumnSpan="4">
                                    <Label Margin="2" Content="Logging"/>
                                    <Separator Style="{StaticResource MaterialDesignSeparator}" Margin="-8"/>
                                </StackPanel>

                                <CheckBox Grid.Row="1" Grid.Column="0" Margin="5" Style="{StaticResource MaterialDesignCheckBox}"/>
                                <TextBox Grid.Row="1" Grid.Column="1" x:Name="IConsoleLogFile" Text="server_console.log" Margin="5"/>
                                <Button Grid.Row="1" Grid.Column="2" Content="Open" Height="20" Width="60" FontSize="11" Margin="5"/>

                                <CheckBox Grid.Row="2" Grid.Column="0" Margin="5" Style="{StaticResource MaterialDesignCheckBox}"/>
                                <TextBox Grid.Row="2" Grid.Column="1" x:Name="IPidFile" Text="pid.log" Margin="5"/>
                                <Button Grid.Row="2" Grid.Column="2" Content="Open" Height="20" Width="60" FontSize="11" Margin="5"/>

                                <CheckBox Grid.Row="3" Grid.Column="0" Margin="5" Style="{StaticResource MaterialDesignCheckBox}"/>
                                <TextBox Grid.Row="3" Grid.Column="1" x:Name="IRakingFile" Text="ranking.log" Margin="5"/>
                                <Button Grid.Row="3" Grid.Column="2" Content="Open" Height="20" Width="60" FontSize="11" Margin="5"/>
                            </Grid>
                        
                            <Grid DockPanel.Dock="Bottom">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <StackPanel Grid.ColumnSpan="7" Grid.Column="0" Margin="0,10,0,0">
                                    <Label Margin="2" Content="RPT"/>
                                    <Label Margin="2,-25" Content="NETLOG" HorizontalAlignment="Right"/>
                                    <Separator Style="{StaticResource MaterialDesignSeparator}" Margin="-8"/>
                                </StackPanel>


                                <ComboBox Grid.Row="1" Grid.Column="0" materialDesign:HintAssist.Hint="TimeStamp" IsEditable="False" Width="60" Style="{StaticResource MaterialDesignFloatingHintComboBox}" Margin="5">
                                    <ComboBoxItem IsSelected="True">none</ComboBoxItem>
                                    <ComboBoxItem>short</ComboBoxItem>
                                    <ComboBoxItem>full</ComboBoxItem>
                                </ComboBox>
                                <Button Grid.Row="1" Grid.Column="1" Height="30" Width="30" Margin="5" VerticalAlignment="Bottom" FontSize="10">
                                    <materialDesign:PackIcon Kind="FolderOpen" Width="22" Height="22" Margin="-12,0,-15,0"/>
                                </Button>
                                <Button Grid.Row="1" Grid.Column="2" Height="30" Width="30" Margin="5" VerticalAlignment="Bottom" FontSize="10">
                                    <materialDesign:PackIcon Kind="Delete" Width="22" Height="22" Margin="-12,0,-15,0"/>
                                </Button>

                                <Button Grid.Row="1" Grid.Column="4" Height="30" Width="30" Margin="5" VerticalAlignment="Bottom" FontSize="10">
                                    <materialDesign:PackIcon Kind="RotateLeft" Width="22" Height="22" Margin="-12,0,-15,0"/>
                                </Button>
                                <Button Grid.Row="1" Grid.Column="5" Height="30" Width="30" Margin="5" VerticalAlignment="Bottom" FontSize="10">
                                    <materialDesign:PackIcon Kind="FolderOpen" Width="22" Height="22" Margin="-12,0,-15,0"/>
                                </Button>
                                <Button Grid.Row="1" Grid.Column="6" Height="30" Width="30" Margin="5" VerticalAlignment="Bottom" FontSize="10">
                                    <materialDesign:PackIcon Kind="Delete" Width="22" Height="22" Margin="-12,0,-15,0"/>
                                </Button>

                            </Grid>
                        </DockPanel>
                    </materialDesign:Card>

                    <materialDesign:Card Grid.Row="2" Grid.Column="2" Margin="5" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                        <Grid>
                            <StackPanel>
                                <Label Margin="2" Content="Auto Restart"/>
                                <CheckBox  Margin="2,-25,2,0" Content="Enable" HorizontalAlignment="Right" FlowDirection="RightToLeft"/>
                                <Separator Style="{StaticResource MaterialDesignSeparator}" Margin="-8"/>
                            </StackPanel>
                        </Grid>
                    </materialDesign:Card>
                </Grid>
            </TabItem>
            <TabItem Header="Misc">
                Misc
            </TabItem>
            <TabItem Header="Mods">
                
            </TabItem>
            <TabItem Header="Missions">
                <Grid Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <materialDesign:Card Margin="5" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">

                    </materialDesign:Card>
                    <materialDesign:Card Grid.Column="1" Margin="5" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <StackPanel Grid.ColumnSpan="2">
                                <Label Margin="2" Content="Main" FontSize="8"/>
                                <Separator Style="{StaticResource MaterialDesignSeparator}" Margin="-8"/>
                            </StackPanel>

                            <StackPanel Grid.Row="1" Grid.Column="0" Margin="5">
                                <CheckBox Style="{StaticResource MaterialDesignCheckBox}" Content="Reduced Damage" Margin="0,4"/>
                                <CheckBox Style="{StaticResource MaterialDesignCheckBox}" Content="Group Indicators" Margin="0,4"/>
                                <CheckBox Style="{StaticResource MaterialDesignCheckBox}" Content="Friendly Name Tags" Margin="0,4"/>
                                <CheckBox Style="{StaticResource MaterialDesignCheckBox}" Content="Loopback" Margin="0,4"/>
                                <CheckBox Style="{StaticResource MaterialDesignCheckBox}" Content="Loopback" Margin="0,4"/>
                                <CheckBox Style="{StaticResource MaterialDesignCheckBox}" Content="Loopback" Margin="0,4"/>
                                <CheckBox Style="{StaticResource MaterialDesignCheckBox}" Content="Loopback" Margin="0,4"/>
                                <CheckBox Style="{StaticResource MaterialDesignCheckBox}" Content="Loopback" Margin="0,4"/>
                                <CheckBox Style="{StaticResource MaterialDesignCheckBox}" Content="Loopback" Margin="0,4"/>
                            </StackPanel>

                            <StackPanel Grid.Row="1" Grid.Column="1" Margin="5">
                                <CheckBox Style="{StaticResource MaterialDesignCheckBox}" Content="Loopback" Margin="0,4"/>
                                <CheckBox Style="{StaticResource MaterialDesignCheckBox}" Content="Loopback" Margin="0,4"/>
                                <CheckBox Style="{StaticResource MaterialDesignCheckBox}" Content="Loopback" Margin="0,4"/>
                                <CheckBox Style="{StaticResource MaterialDesignCheckBox}" Content="Loopback" Margin="0,4"/>
                                <CheckBox Style="{StaticResource MaterialDesignCheckBox}" Content="Loopback" Margin="0,4"/>
                                <CheckBox Style="{StaticResource MaterialDesignCheckBox}" Content="Loopback" Margin="0,4"/>
                                <CheckBox Style="{StaticResource MaterialDesignCheckBox}" Content="Loopback" Margin="0,4"/>
                                <CheckBox Style="{StaticResource MaterialDesignCheckBox}" Content="Loopback" Margin="0,4"/>
                                <CheckBox Style="{StaticResource MaterialDesignCheckBox}" Content="Loopback" Margin="0,4"/>
                            </StackPanel>

                            <StackPanel Grid.Row="1" Grid.Column="2" Margin="5">
                                <CheckBox Style="{StaticResource MaterialDesignCheckBox}" Content="Loopback" Margin="0,4"/>
                                <CheckBox Style="{StaticResource MaterialDesignCheckBox}" Content="Loopback" Margin="0,4"/>
                                <CheckBox Style="{StaticResource MaterialDesignCheckBox}" Content="Loopback" Margin="0,4"/>
                            </StackPanel>

                        </Grid>
                    </materialDesign:Card>
                </Grid>
            </TabItem>
            <TabItem Header="Performance">
                Performance
            </TabItem>
            <TabItem Header="Server Scripting">
                Server Scripting
            </TabItem>
        </dragablz:TabablzControl>
        <Label Grid.Row="1" Name="IProfileDisplayName" VerticalAlignment="Center" Content="Profile Display Name" FontWeight="Bold" FontSize="16" Margin="5"/>
        <StackPanel Name="IProfileNameEdit" Grid.Row="1" Orientation="Horizontal" Margin="10,13" Width="310" HorizontalAlignment="Left" Visibility="Collapsed">
            <TextBox Name="IProfileDisplayNameEdit" FontWeight="Bold" FontSize="16" Width="278"/>
            <Button Name="IProfileNameEditSave" Height="25" Width="25" Margin="5,2" VerticalAlignment="Bottom" FontSize="10"><materialDesign:PackIcon Kind="Check" Width="14" Margin="-11,1,-6,0"/></Button>
        </StackPanel>
        
        <ListBox Name="IServerActionButtons" Grid.Row="1" SelectionMode="Extended" Style="{StaticResource MaterialDesignToolToggleListBox}" HorizontalAlignment="Right" Margin="5,10">
            <ListBoxItem Name="ISaveProfile">
                <ListBoxItem.ToolTip>
                    <TextBlock>Save</TextBlock>
                </ListBoxItem.ToolTip>
                <materialDesign:PackIcon Kind="ContentSave" />
            </ListBoxItem>
            <ListBoxItem Name="IRenameProfile">
                <ListBoxItem.ToolTip>
                    <TextBlock>Rename</TextBlock>
                </ListBoxItem.ToolTip>
                <materialDesign:PackIcon Kind="Pencil" />
            </ListBoxItem>
            <ListBoxItem Name="IDeleteProfile">
                <ListBoxItem.ToolTip>
                    <TextBlock>Delete</TextBlock>
                </ListBoxItem.ToolTip>
                <materialDesign:PackIcon Kind="Delete" />
            </ListBoxItem>
            <ListBoxItem Name="IExportProfile">
                <ListBoxItem.ToolTip>
                    <TextBlock>Export</TextBlock>
                </ListBoxItem.ToolTip>
                <materialDesign:PackIcon Kind="Export" />
            </ListBoxItem>
            <ListBoxItem Name="ILaunchServer">
                <ListBoxItem.ToolTip>
                    <TextBlock>Launch</TextBlock>
                </ListBoxItem.ToolTip>
                <materialDesign:PackIcon Kind="Play" />
            </ListBoxItem>
        </ListBox>
    </Grid>
</UserControl>
